# Dockerfile for Nginx and PHP
FROM alpine:latest

# Install Nginx and PHP
RUN apk update && apk add --no-cache \
    nginx \
    php7 \
    php7-fpm \
    php7-mysqli \
    php7-opcache \
    php7-session \
    php7-json \
    php7-ctype \
    php7-mbstring \
    php7-curl \
    bash

# Install MyACC
RUN git clone https://github.com/slawkens/myaac.git /var/www/myacc

# Configure Nginx
COPY nginx.conf /etc/nginx/nginx.conf

# Configure PHP-FPM
RUN sed -i 's/;cgi.fix_pathinfo=1/cgi.fix_pathinfo=0/' /etc/php7/php.ini
COPY www.conf /etc/php7/php-fpm.d/www.conf

# Expose ports
EXPOSE 80

# Start services
CMD ["sh", "-c", "php-fpm7 && nginx -g 'daemon off;'"]